
<%= form_for @ex do |f| %>
  <div class="form-control">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-control">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-control">
    <%= f.label :count %>
    <%= f.text_field :count %>
  </div>
  <div class="form-control">
    <%= f.submit 'Сохранить' %>
  </div>
<% end %>